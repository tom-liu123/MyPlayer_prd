<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/music_bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/auto_image"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@mipmap/home_page_live"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toRightOf="@+id/auto_image"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="歌单"/>

        <TextView
            android:id="@+id/auto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_above="@id/count"
            android:layout_toRightOf="@+id/auto_image"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="张三"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_above="@id/auto_name"
            android:layout_toRightOf="@+id/auto_image"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="张三"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
